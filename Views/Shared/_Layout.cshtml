<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KhumaloCraftPOE</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KhumaloCraftPOE.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Prata&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Prata&family=Rouge+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css">

</head>
<body>
    <header>
        <nav class="navbar">
                <div class="navbar-links">
                    <ul class="navbar-nav">
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa fa-home fa-2x" aria-hidden="true"></i>

                            <span class="link-text">Home</span>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AboutUs" asp-action="Index">
                                <i class="fa fa-info-circle fa-2x" aria-hidden="true"></i>
                            <span class="link-text">About Us</span>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MyWork" asp-action="Index">
                                <i class="fa fa-paint-brush fa-2x" aria-hidden="true"></i>
                            <span class="link-text">My Work</span>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ContactUs" asp-action="Index">
                                <i class="fa fa-envelope fa-2x" aria-hidden="true"></i>
                            <span class="link-text">Contact Us</span>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">
                            <i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i>
                            <span class="link-text">Shopping Cart</span>
                                </a>
                        </li>
                        
                    </ul>
                </div>
            
        </nav>
        
    </header>
    <div class="body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            &copy; 2024 - KhumaloCraft - <a id="FooterLink" asp-area="" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

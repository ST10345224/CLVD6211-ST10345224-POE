@model KhumaloCraftPOE.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="page-heading">Process Order</h1>
</div>

<h3>Order is ready to be processed?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="order-crud-nav">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost) :
        </dt>
        <dd class = "col-sm-10">
            R @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Process" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
